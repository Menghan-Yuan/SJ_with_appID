

<view class='audio-box'>
  <image class='audio-img' src='{{info.image}}'></image>
  <text class='audio-user'>{{info.title}}</text>
  <button plain="true" hidden="{{!isPlaying}}" size='default' bindtap='pause'><image src="pause.png"></image></button>
  <button plain="true" hidden="{{isPlaying}}" size='default' bindtap='play'>
    <image src="play.png"></image>
  </button>
</view>