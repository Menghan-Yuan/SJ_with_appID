.audio-box {
  display: flex;
  align-items: center;
  padding-right: 10rpx;
  justify-content: space-between;
  border: 36rpx ;
  border-radius: 36rpx;
  width: 90%;
  margin: 50rpx auto 0;
  background-color:  #ffffff;
  box-shadow: 4px 1px 1px #cccccc;
}
.audio-user{
  font-size: 30rpx;
}
.audio-img {
  width: 8rpx;
  height: 160rpx !important;
}

.audio-btn{
  margin: 0;
  width: 45px;
  height: 45px;
  border: 0 rpx;
  border-radius: 500px;
  font-size: 20rpx;
  display: flex; 
  align-items: center; 
  justify-content: center;
  background-color:rgba(235, 109, 8);
  color: white;
}
.circle{
  width: 100px;
  height: 100px;
  border: 0 solid #ffffff;
  border-radius: 500px;
  box-shadow: 4px 1px 1px #cccccc;

}

.card {
  border: 2px solid #e6e6e6a9;
  border-radius: 5px;
  background-color: #e6e6e6a9;

  position: relative;
}

.trip_audio{
  width:670rpx;
height:276rpx;
background:rgba(247, 75, 22, 0.5);
border-radius:36rpx;
margin: 50rpx auto 0;
/* background: #FE6F2A; */
}
.trip_tit{
  padding: 30rpx;
  font-size:35rpx;
font-family:PingFangSC-Semibold;
font-weight:600;
color:rgba(16,21,40,1);
padding-bottom: 10rpx;
}
.time{
  height:34rpx;
font-size:24rpx;
font-family:PingFang-SC-Medium;
font-weight:500;
color:rgba(16,21,40,0.46);
line-height:34rpx;
width: 610rpx;
margin: 0 auto;
}
.trip_btn{
  width: 330rpx;
  height: 28rpx;
  display: flex;
  justify-content: space-between;
  margin: 10rpx auto;
}
.trip_btn image{
  width: 28rpx;
  height: 28rpx;
  display: block;
}
.time_left{
  float: left;
}
.time_right{
  float: right
}
